{
  "buildCommand": "cd nextjs-frontend && npm ci && npm run build",
  "outputDirectory": "nextjs-frontend/.next",
  "installCommand": "cd nextjs-frontend && npm ci",
  "framework": "nextjs",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://morningai-api.onrender.com/api/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
}

